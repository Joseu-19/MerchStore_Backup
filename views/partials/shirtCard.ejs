<style>
  .card {
    width: 350px;
    height: 400px;
    border: 3px solid #252525;
    margin-top: 20px;
    background-color: #fffef2;
  }

  .cardImageContainer {
    height: 75%;
    width: auto;
  }

  .cardImageContainer img {
    height: 100%;
    width: 100%;
    transition: transform 0.2s; /*card hover animation */
    cursor: pointer;
  }

  .cardImageContainer img:hover {
    transform: scale(1.2);
  }

  .card-body {
    position: relative;
    height: 25%;
    padding: 15px;
    background-color: #e5cb8f;
  }

  .card-price {
    position: absolute;
    top: 10px;
    right: 10px;
  }

  .sale {
    position: absolute;
    z-index: 4;
    bottom: 95%;
    background-color: #252525;
  }

  @media screen and (max-width: 750px) {
    .card {
      width: 250px;
      height: 350px;
    }
  }
</style>
<div class="card">
  <div class="cardImageContainer">
    <img src="<%= item.imageURL %>" alt="T-shirt image" />
  </div>
  <div class="card-body">
    <h6 class="card-size">Size: <%= item.size %></h6>
    <h5 class="card-price">Price: $<%= item.price %></h5>
    <% if (item.sale) { %>
    <p class="text-warning sale">On Sale!</p>
    <% } %>
  </div>
</div>
